{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "temperature-monitor",
  "version": "0.1.0",
  "identifier": "dev.zeydie",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Temperature Monitor",
        "width": 350,
        "height": 300,
        "decorations": false,
        "maximizable": false,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
